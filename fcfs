#include <stdio.h>

int main() {
    int frames, pages[100], frame[10], n;
    int i, j, k, pagefaults = 0;
    int oldest = 0;

    printf("Enter the number of frames: ");
    scanf("%d", &frames);

    printf("Enter number of pages: ");
    scanf("%d", &n);

    printf("Enter the page reference string:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &pages[i]);
    }

    // Initialize frame array to -1
    for (i = 0; i < frames; i++) {
        frame[i] = -1;
    }

    printf("\nPage\tFrames\t\tPage Fault\n");
    printf("------------------------------------------\n");

    for (i = 0; i < n; i++) {
        int hit= 0;

        // Check if page already exists in frame
        for (j = 0; j < frames; j++) {
            if (frame[j] == pages[i]) {
                hit = 1;
                break;
            }
        }

        if (!hit) {
            // Replace the oldest page
            frame[oldest] = pages[i];
            oldest = (oldest + 1) % frames;
            pagefaults++;
        }

        // Print current frame status
        printf("%d\t", pages[i]);
        for (k = 0; k < frames; k++) {
            if (frame[k] == -1)
                printf("-\t");
            else
                printf("%d\t", frame[k]);
        }
        printf("%s\n", hit ? "hit" : "Fault");
    }
      int Hit= n-pagefaults;
    printf("\nTotal Page Faults: %d\n", pagefaults);
    printf("\nTotal Page HIT : %d\n", Hit);
    return 0;
}
